def ejecutar = false
pipeline {
    agent any
    stages { 
        stage('Siempre me ejecuto') {
            steps {
                echo 'Esta fase siempre se ejecuta'
            }
        }

        stage('No me ejecuto según condición') {
            when {
                expression {
                    ejecutar == true
                }
            }
            steps {
                echo 'Esta fase se ejecuta según un valor booleano'
                script {
                    ejecutar = true.toBoolean()
                }
               
            }
        }
        stage('Me ejecuto según condición') {
            when {
                expression {
                    ejecutar == true
                }
            }
            steps {
                echo 'Esta fase se ejecuta según un valor booleano'
            }
        }

    }
}